@model IEnumerable<SalesSystem.System.MVC.Models.ViewModels.SellerViewModel>

@{
    ViewData["Title"] = "Sellers";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>

<div class="panel panel-body">
    <p>
        <a asp-controller="Sellers" asp-action="Create" class="btn btn-secondary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>

                    <td>
                        <a asp-controller="Sellers" asp-action="Edit" asp-route-id="@item.Id" 
                           class="btn btn-primary">Edit</a> 
                        <a asp-controller="Sellers" asp-action="Details" asp-route-id="@item.Id" 
                           class="btn btn-info">Details</a> 
                        <a asp-controller="Sellers" asp-action="Delete" asp-route-id="@item.Id" 
                           class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
